    {lager, "3.6.2"},
    {riak_pb, ".*", {git, "git://github.com/syncfree/riak_pb", {tag, "feature/otp21"}}}
]}.

{plugins, [
  {protobuffs, {git, "git://github.com/albsch/erlang_protobuffs.git", {branch, "master"}}}
